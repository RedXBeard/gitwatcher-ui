#:kivy 1.8.0

BoxLayout:
    orientation: 'horizontal'

    id: 'changes_screen'
    changelist: changelist.__self__
    info: info.__self__
    userinfo: userinfo.__self__
    uncommitted: uncommitted.__self__
    message: message.__self__

    Splitter:
        sizable_from: 'right'
        rescale_with_parent: True
        max_size: self.parent.width
        BoxLayout:
            padding_x: '-15dp'
            orientation: 'vertical'
            id: changelist

            Label:
                canvas.before:
                    Color:
                        rgb: .9,.9,.9
                    Rectangle:
                        id: rectangle
                        pos: self.pos
                        size: self.size
                id: info
                name: 'info'
                markup: True
                valign: 'top'
                halign: 'left'
                text_size: self.width, self.height
                strip: True
                shorten: True
                text: "[color=575757][size=12][font=assets/fonts/fontawesome-webfont.ttf]ï‡ [/font][size=12][/color]"
                padding_x: '-10dp'
                padding_y: '-3dp'
                size_hint: 1.0, 0.1

            Label:
                canvas.before:
                    Color:
                        rgb: .9,.9,.9
                    Rectangle:
                        id: rectangle
                        pos: self.pos
                        size: self.size

                id: userinfo
                name: 'userinfo'
                markup: True
                valign: 'top'
                halign: 'left'
                text_size: self.width, self.height
                strip: True
                shorten: True
                text: "[color=000000][size=13][b]Uncommitted Changes[/b][/size][/color]"
                padding_x: '-10dp'
                size_hint: 1.0, 0.15

            TextInput:
                id: message
                size_hint_y: None
                focus: True
                hint_text: 'Description'
                height: '74dp'
                font_size: 13
                background_color: .9, .9, .9, 1
                border: 5,5,5,5

            ListView:
                id: uncommitted

    ScrollView:
        id: textscroll
        textarea: textarea.__self__
        do_scroll_y: True
        size_hint: 1, 1
        bar_pos_x: 'top'
        Label:
            id: textarea
            padding_x: '-5dp'
            text: ''
            font_size: 12
            readonly: True
            valign: 'top'
            markup: True
            text_size: self.parent.width, self.height
            size_hint: 1, None
            height: len(self.text)
