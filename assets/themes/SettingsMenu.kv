SettingsBox:
    background_color: .8,.8,.8
    remote_url: remote_url
    gitignore: gitignore
    ignorebutton: ignorebutton
    remotebutton: remotebutton
    BoxLayout:
        orientation: "vertical"
        CustomLabel:
            text: '[b][size=13][color=303030]Primary remote repository[/color] [color=707070](origin)[/color][/size][/b]'
            size_hint: 1.0, 0.1
            padding_x: '-5dp' if KIVY_VERSION == '1.8.0' else '5dp'
            halign: 'left'
            text_size: self.width, self.height
        BoxLayout:
            size_hint_y: 0.15
            orientation: 'vertical'
            TextInput:
                id: remote_url
                padding_y: '10dp'
                text: ''
                hint_text: 'remotes'
                height: '36dp'
                size_hint_y: None
                font_size: 12
                multiline: False
                focus: True
                background_color: color1
            SettingsButton:
                id: remotebutton
                text: '[color=%s][size=13]Update Remote[/size][/color]'%hex1
                size_hint: None, None
                width: '120dp'
                height: '30dp'
                markup: True
                background_color: color2
                border: 4,4,4,4
                pos_hint: {'right':1}
        CustomLabel:
            text: '[b][size=13][color=303030]Ignored files[/color][color=707070] (.gitignore)[/color][/size][/b]'
            size_hint: 1.0, 0.1
            padding_x: '-5dp' if KIVY_VERSION == '1.8.0' else '5dp'
            halign: 'left'
            text_size: self.width, self.height
        BoxLayout:
            orientation: 'vertical'
            ScrollView:
                TextInput:
                    id: gitignore
                    text: ''
                    hint_text: '.gitignore'
                    font_size: '12dp'
                    size_hint: 1.0, 1.0
                    pos_hint: {'top': 1}
                    height: max(self.minimum_height, self.parent.height)
                    background_color: color1
            SettingsButton:
                id: ignorebutton
                text: '[color=%s][size=13]Save Changes[/size][/color]'%hex1
                size_hint: None, None
                width: '120dp'
                height: '30dp'
                markup: True
                background_color: color2
                border: 4,4,4,4
                pos_hint: {'right':1, 'top': 1}

