SettingsBox:
    background_color: .8,.8,.8
    remote_path: remote_path.__self__
    gitignore: gitignore.__self__
    BoxLayout:
        orientation: "vertical"
        CustomLabel:
            text: '[b][size=13][color=575757]Primary remote repository[/color] [color=707070](origin)[/color][/size][/b]'
            size_hint: 1.0, 0.1
            padding_x: "-5dp"
            halign: 'left'
            text_size: self.width, self.height
        BoxLayout:
            size_hint_y: 0.15
            orientation: 'vertical'
            unpushedbutton: unpushedbutton.__self__
            TextInput:
                id: remote_path
                padding_y: '10dp'
                text: ''
                hint_text: 'remotes'
                height: '36dp'
                size_hint_y: None
                font_size: 12
                multiline: False
                focus: True
            SettingsButton:
                id: unpushedbutton
                text: '[color=202020][size=13]Update Remote[/size][/color]'
                size_hint: None, None
                width: '120dp'
                height: '30dp'
                markup: True
                background_color: .7, .7, 1, 0.2
                border: 4,4,4,4
                pos_hint: {'right':1}
        CustomLabel:
            text: '[b][size=13][color=575757]Ignored files[/color][color=707070](.gitignore)[/color][/size][/b]'
            size_hint: 1.0, 0.1
            padding_x: "-5dp"
            halign: 'left'
            text_size: self.width, self.height
        BoxLayout:
            orientation: 'vertical'
            TextInput:
                id: gitignore
                text: ''
                hint_text: '.gitignore'
                font_size: '12dp'
                size_hint: 1.0, 1.0
                pos_hint: {'top': 1}
            SettingsButton:
                text: '[color=202020][size=13]Save Changes[/size][/color]'
                size_hint: None, None
                width: '120dp'
                height: '30dp'
                markup: True
                background_color: .7, .7, 1, 0.2
                border: 4,4,4,4
                pos_hint: {'right':1, 'top': 1}

