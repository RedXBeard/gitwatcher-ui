#:kivy 1.8.0

HistoryBox:
    orientation: 'horizontal'

    id: 'history_screen'
    repodetail: repodetail.__self__
    textarea: textarea.__self__
    repohistory_count: repohistory_count.__self__
    commitinfo: commitinfo.__self__
    history_list: []

    Splitter:
        id: repo_box
        sizable_from: 'right'
        rescale_with_parent: True
        max_size: self.parent.width

        # History Part
        repodetail: repodetail.__self__
        menu_history: menu_history.__self__

        BoxLayout:
            id: menu_history
            orientation: 'vertical'

            CustomLabel:
                canvas.before:
                    Color:
                        rgb: .9,.9,.9
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: repohistory_count
                halign: 'center'
                strip: True
                size_hint: 1.0, 0.04
                border: 1,1,1,1
            CustomLabel:
                size_hint: 1.0, None
                height: '10dp'
            ListView:
                id: repodetail
                adapter: ListAdapter(data=root.history, cls=Factory.RepoHistoryItem, args_converter=root.history_args_converter)

    BoxLayout:
        canvas.before:
            Color:
                rgb: .9,.9,.9
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        ScrollView:
            do_scroll_y: True
            size_hint: 1.0, None
            height: '80dp'
            CustomLabel:
                id: commitinfo
                size_hint: 1.0, None
                height: '60dp'
                text_size: self.width, self.height
                halign: 'left'
                markup: True
        CustomLabel:
            canvas.before:
                Color:
                    rgb: .8,.8,.8
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: 1.0, None
            height: '10dp'

        ScrollView:
            id: historytextscroll
            TextInput:
                id: textarea
                padding_x: '5dp'
                font_size: 12
                readonly: True
                size_hint: 1, None
                height: max(self.minimum_height, historytextscroll.height)
                cursor: None