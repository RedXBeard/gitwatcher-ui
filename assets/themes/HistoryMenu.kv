#:kivy 1.8.0

HistoryBox:
    orientation: 'horizontal'

    id: 'history_screen'
    repodetail: repodetail.__self__
    repohistory_count: repohistory_count.__self__
    commitinfo: commitinfo
    authorlabel: authorlabel
    commitlabel: commitlabel
    datelabel: datelabel
    history_list: []

    Splitter:
        id: repo_box
        sizable_from: 'right'
        rescale_with_parent: True
        max_size: self.parent.width
        min_size: 350

        # History Part
        repodetail: repodetail.__self__
        menu_history: menu_history.__self__

        BoxLayout:
            id: menu_history
            orientation: 'vertical'
            repodetail: repodetail
            CustomLabel:
                canvas.before:
                    Color:
                        rgb: .9,.9,.9
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: repohistory_count
                halign: 'center'
                strip: True
                size_hint: 1.0, 0.04
                border: 1,1,1,1
            CustomLabel:
                size_hint: 1.0, None
                height: '10dp'
            ListView:
                id: repodetail
                adapter: ListAdapter(data=root.history, cls=Factory.RepoHistoryItem, args_converter=root.history_args_converter)

    BoxLayout:
        canvas.before:
            Color:
                rgb: .9,.9,.9
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'

        ScrollView:
            id: infoscroll
            size_hint: 1.0, 0.1
            TextInput:
                id: commitinfo
                size_hint: 1.0, None
                height: max(self.minimum_height, infoscroll.height)
                padding_x: '5dp'
                font_size: 13
                readonly: True
                cursor: None
                disabled: True
        CustomLabel:
            canvas.before:
                Color:
                    rgb: .8,.8,.8
                Rectangle:
                    pos: self.pos
                    size: self.size

            size_hint: 1.0, None
            height: '3dp'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '15dp'
            CustomLabel:
                id: authorlabel
                size_hint: 1.0, None
                height: self.height
                text_size: self.width, self.height
                halign: 'left'
                padding_x: '-5dp'
                text: "[color=000000][size=13][font=assets/fonts/fontawesome-webfont.ttf][/font][/size][/color] "
                split: False
                max_lines: 1
                strip: True
                split_str: 'dontsplit'
                shorten: True

            CustomLabel:
                id: commitlabel
                size_hint: 1.0, None
                height: self.height
                text_size: self.width, self.height
                halign: 'left'
                padding_x: '-5dp'
                text: "[color=000000][size=13][font=assets/fonts/fontawesome-webfont.ttf][/font][/size][/color] "
                split: False
                max_lines: 1
                strip: True
                split_str: 'dontsplit'
                shorten: True

            CustomLabel:
                id: datelabel
                size_hint: 1.0, None
                height: self.height
                text_size: self.width, self.height
                halign: 'left'
                padding_x: '-5dp'
                text: "[color=000000][size=13][font=assets/fonts/fontawesome-webfont.ttf][/font][/size][/color] "
                split: False
                max_lines: 1
                strip: True
                split_str: 'dontsplit'
                shorten: True

        CustomLabel:
            canvas.before:
                Color:
                    rgb: .8,.8,.8
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: 1.0, None
            height: '10dp'

        ScrollView:
            id: historytextscroll
            ListView:
                adapter: ListAdapter(data=root.diff, cls=Factory.DiffItem, args_converter=root.diff_args_converter)
