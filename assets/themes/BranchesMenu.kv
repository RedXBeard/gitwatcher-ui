BranchesBox:
    orientation: 'vertical'

    mergebox: mergebox
    mergeviewbutton: mergeviewbutton
    topspace: topspace
    currentbranchboxparent: currentbranchboxparent
    midspace: midspace
    branchlistbox: branchlistbox

    branchlist: branchlist
    currentbranchbox: currentbranchbox
    newbranchbox: newbranchbox
    currentbranchlabelbox: currentbranchlabelbox


    movelabel: movelabel.__self__
    renamebutton: renamebutton.__self__
    repobranchlabel: repobranchlabel.__self__
    repobranchedit: repobranchedit.__self__
    repobranchsha: repobranchsha.__self__
    repobranchtext: repobranchtext.__self__
    branchdate: branchdate.__self__
    spacelabel: spacelabel.__self__
    branchmenubutton: branchmenubutton.__self__
    ispublished: ispublished.__self__

    mergeinfolabel: mergeinfolabel
    source: source
    target: target

    BoxLayout:
        canvas.before:
            Color:
                rgb: color5
            Rectangle:
                id: rectangle
                pos: self.pos
                size: self.size

        id: mergebox
        size_hint: 1.0, None

        height: '60dp'

        BoxLayout:
            orientation: 'horizontal'

            CustomLabel:
                id: mergeinfolabel
                text: '[color=%s]Drag a branch to merge [font=%s][/font][/color]'%(hex1, iconic_font_name)
                pre_text: '[color=%s]Drag a branch to merge [font=%s][/font][/color]'%(hex1, default_bold_font_name)
                size_hint: 0.5, 1.0
                font_size: 20
                text_size: self.width, None
                halign: 'right'
                shorten: True
                padding_x: '-10dp' if KIVY_VERSION == '1.8.0' else '10dp'

            CustomTextInput:
                id: source
                name: "source"
                bold: True
                markup: True
                size_hint: None, None
                size: '100dp', '45dp'
                multiline: False
                font_size: 20
                focus: True
                padding: 7,7,7,7
                font_name: default_font_name
                pos_hint: {'x':0.75, 'y':0.13}
                disabled: True
                shorten: True

            CustomLabel:
                size_hint: None, 1.0
                width: '30dp'
                text: "[color=%s]to[/color]"%hex1

            CustomTextInput:
                id: target
                name: "target"
                bold: True
                markup: True
                size_hint: None, None
                size: '100dp', '45dp'
                multiline: False
                font_size: 20
                focus: True
                padding: 7,7,7,7
                font_name: default_font_name
                pos_hint: {'x':0.75, 'y':0.13}
                disabled: True
                shorten: True

            CustomLabel:
                size_hint: None, 1.0
                width: '10dp'

            Button:
                text: "[color=%s]Merge Branches[/color]"%hex1
                size_hint: None, None
                width: '100dp'
                height: '30dp'
                font_size: 11
                pos_hint: {'y':0.25}
                background_color: color3#.7, .7, .9, .3
                border: 8,8,8,8
                markup: True
                on_press: root.merge_branches(root.source.text, root.target.text)
                background_normal: ""
                background_down: ""

            CustomLabel:
                size_hint: None, 1.0
                width: '10dp'
    BoxLayout:
        size_hint: 1.0, None
        height: '20dp'
        id: mergeviewbutton
        CustomLabel:
            size_hint: None, 1.0
            width: self.parent.width - 110

        MergeButton:
            text: "[color=%s][b]Merge View [font=%s][/font][/b]"%(hex1, iconic_font_name)
            font_size: 11
            markup: True
            background_color: color2#.7, .7, .9, .4
            size_hint: None, None
            width: '100dp'
            height: '20dp'
            border: 8,8,8,8
            background_normal: ""
            background_down: ""


    CustomLabel:
        id: topspace
        text: '[color=%s][b][size=13]Branches[/size][/b][/color]'%hex1
        text_size: self.width, self.height
        valign: 'middle'
        halign: 'left'
        size_hint: 1.0, None
        height: '30dp'
        padding_x: '-3dp' if KIVY_VERSION == '1.8.0' else '3dp'

    BoxLayout:
        size_hint: 1.0, None
        height: '100dp'
        id: currentbranchboxparent

        CustomLabel:
            size_hint: None, 1.0
            width: '10dp'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1.0, None
            height: '100dp'
            id: currentbranchbox

            CustomLabel:
                canvas.before:
                    Color:
                        rgb: color1
                    Rectangle:
                        id: rectangle
                        pos: self.pos
                        size: self.size
                text: "[color=000000][size=12]Current Branch[/size][/color]"
                size_hint: 1.0, None
                height: '30dp'
                text_size: self.width, self.height
                valign: 'middle'
                halign: 'left'

            BoxLayout:
                canvas.before:
                    Color:
                        rgb: color2
                    Rectangle:
                        id: rectangle
                        pos: self.pos
                        size: self.size
                orientation: 'horizontal'
                height: '35sp'
                size_hint_y: None
                id: currentbranchlabelbox

                repobranchlabel: repobranchlabel

                MoveButton:
                    id: movelabel
                    text: "[color=%s][/color]"%hex1
                    font_name: iconic_font_name
                    size_hint: None, 1.0
                    width: '20dp'
                    markup: True
                    background_color: 0,0,0,0

                RenameButton:
                    id: renamebutton
                    text: '[color=%s][/color]'%hex1
                    halign: 'center'
                    size_hint: None, 1.0
                    width: '20dp'
                    font_size: 11

                CustomLabel:
                    id: repobranchlabel
                    text: "[color=%s][size=13][b]%s[/b][/size][/color]"%(hex1,root.name)
                    path: ""
                    size_hint: None, 1.0
                    width: '75dp'
                    valign: 'middle'
                    halign: 'left'
                    text_size: self.width, self.height
                    shorten: True

                BoxLayout:
                    id: repobranchedit
                    size_hint_x: None
                    width: '75dp'

                    CustomTextInput:
                        text: "%s"%root.name
                        name: "edit"
                        bold: True
                        markup: True
                        size_hint: None, None
                        size: '70dp', '20dp'
                        multiline: False
                        font_size: 12
                        focus: True
                        cursor_blink: True
                        padding: 6,2,6,2
                        font_name: default_font_name
                        pos_hint: {'x':0.5, 'y':0.20}

                    CustomLabel:
                        size_hint: None, 1.0
                        width: '5dp'

                CustomLabel:
                    id: repobranchsha
                    text: "[size=11][color=%s]: %s[/color][/size]"%(hex1,root.sha)
                    path: ""
                    size_hint: None, 1.0
                    width: '60dp'
                    valign: 'middle'
                    halign: 'left'
                    text_size: self.width, self.height
                    shorten: True

                CustomLabel:
                    id: repobranchtext
                    text: "[color=%s][size=13][b]%s[/b]: [color=%s]%s[/color][/size][/color]"%(hex1, root.commiter, hex1, root.subject)
                    path: ""
                    valign: 'middle'
                    halign: 'left'
                    padding_x: '-10dp' if KIVY_VERSION == '1.8.0' else '10dp'
                    text_size: self.width, self.height
                    strip: True
                    shorten: True

                CustomLabel:
                    id: branchdate
                    text: "[color=%s][size=10]%s[/size][/color]"%(hex1, root.date)
                    size_hint: None, 1.0
                    width: '65dp'
                    valign: 'middle'
                    halign: 'right'
                    padding_x: '10dp'

                CustomLabel:
                    id: spacelabel
                    canvas.before:
                        Color:
                            rgb: color1
                        Rectangle:
                            id: rectangle
                            pos: self.pos
                            size: self.size
                    size_hint: None, 1.0
                    width: '1dp'

                BranchMenuButton:
                    id: branchmenubutton
                    background_color: color2
                    size_hint_x: None
                    width: '35dp'
                    font_name: iconic_font_name
                    text: "[color=%s][/color]"%hex1#""
                    background_normal: ""
                    background_down: ""
                    markup: True
                    background_normal: ""
                    background_down: ""

                BoxLayout:
                    id: ispublished
                    size_hint: None, 1.0
                    width: '70dp'

                    CustomLabel:
                        canvas.before:
                            Color:
                                rgb: color1
                            Rectangle:
                                id: rectangle
                                pos: self.pos
                                size: self.size
                        size_hint: None, 1.0
                        width: '10dp'

                    PushUnpushButton:
                        text: "[color=%s]%s[/color]"%(hex1, 'Unpush' if root.published else 'Push')
                        size_hint: None, 1.0
                        width: '60dp'
                        font_size: 12
                        background_color: (color3) if root.published else (color2)
                        is_published: root.published
                        markup: True

            BoxLayout:
                size_hint: 1.0, None
                height: '30dp'
                name: "newbranch"
                id: newbranchbox
                BoxLayout:
                    orientation: 'vertical'

                    CustomLabel:
                        size_hint: 1.0, None
                        height: '1dp'

                    BoxLayout:
                        CustomLabel:
                            size_hint: None, 1.0
                            width: '10dp'

                        BoxLayout:
                            newbranchtextinput: newbranchtextinput
                            canvas.before:
                                Color:
                                    rgb: color2#.9,.9,.9
                                Rectangle:
                                    id: rectangle
                                    pos: self.pos
                                    size: self.size
                            CustomLabel:
                                size_hint: 0.4, 1.0
                                valign: 'middle'
                                halign: 'right'
                                text_size: self.width, self.height
                                strip: True
                                shorten: True
                                padding_x: '-10dp' if KIVY_VERSION == '1.8.0' else '10dp'
                                text: "[size=11][color=%s][font=%s][/font] Create a new branch off %s[/color][/size]"%(hex1, iconic_font_name, root.name)

                            CustomTextInput:
                                id: newbranchtextinput
                                multiline: False
                                font_size: 11
                                size_hint: None, None
                                size: '130dp', '20dp'
                                focus: True
                                cursor_blink: True
                                hint_text: 'branch name'
                                padding: 6,2,6,2
                                font_name: default_font_name
                                name: "new"
                                pos_hint: {'y': 0.15}

                            CustomLabel:
                                size_hint: None, 1.0
                                width: '10dp'

                            Button:
                                text: 'Branch'
                                size_hint: None, None
                                width: '60dp'
                                height: '22dp'
                                font_size: 11
                                background_color: color2#.7, .7, .9, .5
                                border: 8,8,8,8
                                pos_hint: {'y': 0.1}
                                on_press: self.parent.newbranchtextinput.on_press()
                                background_normal: ""
                                background_down: ""

                            CustomLabel:
                                size_hint: None, 1.0
                                width: '10dp'

                        CustomLabel:
                            size_hint: None, 1.0
                            width: '80dp'


        CustomLabel:
            size_hint: None, 1.0
            width: '10dp'

    CustomLabel:
        id: midspace
        canvas.before:
            Color:
                rgb: color1
            Rectangle:
                id: rectangle
                pos: self.pos
                size: self.size
        text: "[color=000000][size=12]Other Branches[/size][/color]"
        size_hint: 1.0, None
        height: '30dp'
        text_size: self.width, self.height
        valign: 'middle'
        halign: 'left'
        padding_x: '-10dp' if KIVY_VERSION == '1.8.0' else '10dp'

    BoxLayout:
        id: branchlistbox
        CustomLabel:
            size_hint: None, 1.0
            width: '10dp'
        ListView:
            id: branchlist
            adapter: ListAdapter(data=root.branches, cls=Factory.BranchesItem, args_converter=root.args_converter)
        CustomLabel:
            size_hint: None, 1.0
            width: '10dp'