BranchesBox:
    orientation: 'vertical'
    CustomLabel:
        text: '[color=000000][b][size=13]Branches[/size][/b][/color]'
        text_size: self.width, self.height
        valign: 'middle'
        halign: 'left'
        size_hint: 1.0, None
        height: '30dp'
        padding_x: '-3dp'

    BoxLayout:
        size_hint: 1.0, None
        height: '70dp'

        CustomLabel:
            size_hint: None, 1.0
            width: '10dp'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1.0, None
            height: '70dp'
            CustomLabel:
                canvas.before:
                    Color:
                        rgb: .8,.8,.8
                    Rectangle:
                        id: rectangle
                        pos: self.pos
                        size: self.size
                text: "[color=606060][size=12]Current Branch[/size][/color]"
                size_hint: 1.0, None
                height: '30dp'
                text_size: self.width, self.height
                valign: 'middle'
                halign: 'left'

            BoxLayout:
                orientation: 'horizontal'
                height: '35sp'
                size_hint_y: None
                CustomLabel:
                    canvas.before:
                        Color:
                            rgb: .9,.9,.9
                        Rectangle:
                            id: rectangle
                            pos: self.pos
                            size: self.size
                    id: repobranchlabel
                    text: "[color=202020][size=13][b]%s[/b]\n[color=555555]%s[/color][/size][/color]"%(root.name, root.sha)
                    path: ""
                    size_hint: None, 1.0
                    width: '100dp'
                    valign: 'top'
                    halign: 'left'
                    padding_x: '-10dp'
                    text_size: self.width, self.height
                    shorten: True
                CustomLabel:
                    canvas.before:
                        Color:
                            rgb: .9,.9,.9
                        Rectangle:
                            id: rectangle
                            pos: self.pos
                            size: self.size
                    id: repobranchlabel
                    text: "[color=202020][size=13][b]%s[/b]: [color=555555]%s[/color][/size][/color]"%(root.commiter, root.subject)
                    path: ""
                    size_hint: 1.0, 1.0
                    valign: 'middle'
                    halign: 'left'
                    padding_x: '-10dp'
                    text_size: self.width, self.height
                    strip: True
                    shorten: True

        CustomLabel:
            size_hint: None, 1.0
            width: '10dp'
    CustomLabel:
        text: ""
        size_hint_y: None
        height: '10dp'

    BoxLayout:
        CustomLabel:
            size_hint: None, 1.0
            width: '10dp'
        ListView:
            id: branchlist
            adapter: ListAdapter(data=root.branches, cls=Factory.BranchesItem, args_converter=root.args_converter)
        CustomLabel:
            size_hint: None, 1.0
            width: '10dp'