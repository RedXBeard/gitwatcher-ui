BranchesBox:
    orientation: 'vertical'

    Label:
        canvas.before:
            Color:
                rgb: .8,.8,.8
            Rectangle:
                id: rectangle
                pos: self.pos
                size: self.size
        text: "[color=606060][size=12]Current Branch[/size][/color]"
        size_hint: 1.0, 0.05
        text_size: self.width, self.height
        valign: 'middle'
        halign: 'left'
        markup: True

    BoxLayout:
        orientation: 'horizontal'
        height: '35sp'
        size_hint_y: None
        Label:
            canvas.before:
                Color:
                    rgb: .9,.9,.9
                Rectangle:
                    id: rectangle
                    pos: self.pos
                    size: self.size
            id: repobranchlabel
            text: "[color=202020][size=13][b]%s[/b]\n[color=555555]%s[/color][/size][/color]"%(root.name, root.sha)
            markup: True
            path: ""
            size_hint: None, 1.0
            width: '100dp'
            valign: 'top'
            halign: 'left'
            padding_x: '-10dp'
            text_size: self.width, self.height
            shorten: True
        Label:
            canvas.before:
                Color:
                    rgb: .9,.9,.9
                Rectangle:
                    id: rectangle
                    pos: self.pos
                    size: self.size
            id: repobranchlabel
            text: "[color=202020][size=13][b]%s[/b]: [color=555555]%s[/color][/size][/color]"%(root.commiter, root.subject)
            markup: True
            path: ""
            size_hint: 1.0, 1.0
            valign: 'middle'
            halign: 'left'
            padding_x: '-10dp'
            text_size: self.width, self.height
            strip: True
            shorten: True

    Label:
        text: ""
        size_hint_y: 0.03

    ListView:
        id: branchlist
        adapter: ListAdapter(data=root.branches, cls=Factory.BranchesItem, args_converter=root.args_converter)
